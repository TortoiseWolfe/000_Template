{
  "name": "project-name",
  "version": "1.0.0",
  "description": "Production-ready project template with Context Engineering",
  "private": true,
  "author": "TortleWolfe",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "dev": "npm run dev:frontend & npm run dev:backend",
    "dev:frontend": "cd src/frontend && npm run dev",
    "dev:backend": "cd src/backend && npm run dev",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "cd src/frontend && npm run build",
    "build:backend": "cd src/backend && npm run build",
    "preview": "npm run preview:frontend",
    "preview:frontend": "cd src/frontend && npm run preview",
    
    "test": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "test:unit": "jest --config jest.unit.config.js",
    "test:integration": "jest --config jest.integration.config.js",
    "test:e2e": "playwright test",
    "test:a11y": "pa11y-ci",
    "test:colorblind": "jest tests/a11y/color-contrast.spec.js",
    "test:keyboard": "playwright test tests/a11y/keyboard.spec.js",
    "test:visual": "playwright test --config playwright.visual.config.js",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "coverage:report": "cat coverage/lcov.info | coveralls",
    
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "type-check": "tsc --noEmit",
    
    "lighthouse": "lhci autorun",
    "bundle-analyze": "webpack-bundle-analyzer dist/stats.json",
    "test:contrast": "node scripts/test-contrast.js",
    "test:performance": "node scripts/test-performance.js",
    
    "validate": "npm run validate:env && npm run validate:deps && npm run validate:all",
    "validate:env": "node scripts/validate-env.js",
    "validate:deps": "npm audit --audit-level=moderate",
    "validate:all": "npm run lint && npm run type-check && npm run test && npm run test:a11y",
    
    "db:migrate": "node scripts/db-migrate.js",
    "db:migrate:test": "NODE_ENV=test node scripts/db-migrate.js",
    "db:seed": "node scripts/db-seed.js",
    "db:reset": "node scripts/db-reset.js",
    
    "docker:up": "docker-compose up",
    "docker:down": "docker-compose down",
    "docker:build": "docker-compose build",
    "docker:logs": "docker-compose logs -f",
    
    "deploy:gh-pages": "gh-pages -d dist",
    "deploy:vercel": "vercel --prod",
    "deploy:docker": "docker build -t project-name . && docker push",
    "deploy:vps": "node scripts/deploy-vps.js",
    
    "security:check": "npm audit && snyk test",
    "security:fix": "npm audit fix",
    "security:scan": "trufflehog filesystem .",
    
    "clean": "rm -rf dist build coverage .next .nuxt .cache",
    "clean:all": "npm run clean && rm -rf node_modules package-lock.json",
    
    "precommit": "lint-staged",
    "prepush": "npm run validate:all",
    "postinstall": "husky install"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "next": "^14.0.0",
    "express": "^4.18.0",
    "fastify": "^4.24.0",
    "postgres": "^3.4.0",
    "redis": "^4.6.0",
    "zod": "^3.22.0",
    "bcrypt": "^5.1.0",
    "jsonwebtoken": "^9.0.0",
    "dotenv": "^16.3.0",
    "winston": "^3.11.0",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "typescript": "^5.3.0",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-react": "^7.33.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "prettier": "^3.1.0",
    "jest": "^29.7.0",
    "@testing-library/react": "^14.1.0",
    "@testing-library/jest-dom": "^6.1.0",
    "@playwright/test": "^1.40.0",
    "pa11y": "^6.2.0",
    "pa11y-ci": "^3.1.0",
    "axe-core": "^4.8.0",
    "axe-playwright": "^1.2.3",
    "@lhci/cli": "^0.13.0",
    "webpack-bundle-analyzer": "^4.10.0",
    "husky": "^8.0.0",
    "lint-staged": "^15.1.0",
    "concurrently": "^8.2.0",
    "nodemon": "^3.0.0",
    "cross-env": "^7.0.3",
    "gh-pages": "^6.1.0",
    "vercel": "^32.0.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ]
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup/jest.setup.js"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!src/**/*.d.ts",
      "!src/**/*.stories.{js,jsx,ts,tsx}",
      "!src/**/index.{js,jsx,ts,tsx}"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/TortoiseWolfe/PROJECT_NAME"
  },
  "bugs": {
    "url": "https://github.com/TortoiseWolfe/PROJECT_NAME/issues"
  },
  "homepage": "https://github.com/TortoiseWolfe/PROJECT_NAME#readme",
  "keywords": [
    "template",
    "context-engineering",
    "accessibility",
    "wcag",
    "production-ready",
    "testing",
    "ci-cd",
    "docker"
  ]
}